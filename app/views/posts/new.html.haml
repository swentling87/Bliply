.page-header
  %h1 Create Post
  .row
    .col-md-4
      - if params.include?(:location_id)
        =form_for [@location, @post] do |f|
          .div.form-group
            = f.label :body
            = f.text_area :body, rows: 8, class: 'form-control'
          .div
            = f.submit "Save"
      - elsif params.include?(:interest_id)
        =form_for [@interest, @post] do |f|
          .div.form-group
            = f.label :body
            = f.text_area :body, rows: 8, class: 'form-control'
          .div
            = f.submit "Save"
      -elsif params.include?(:id)
        =form_for @post do |f|
          .div.form-group
            = f.label :body
            = f.text_area :body, rows: 8, class: 'form-control'
          .div
            = f.submit "Save"
