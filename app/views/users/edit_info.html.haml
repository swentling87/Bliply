.page-header
  %h1 Edit Profile
.row
  .col-md-4
    =form_for current_user do |f|
      .div.form-group
        = f.label :name
        = f.text_field :name, class: 'form-control'
      .div.form-group
        = f.label :age
        = f.text_field :age, class: 'form-control'
      .div.form-group
        = f.label :gender
        <br>
        = f.label :Male
        = f.radio_button :gender, "1"
        = f.label :Female
        = f.radio_button :gender, "2"
        = f.label :Other
        = f.radio_button :gender, "3"
      .div
        = f.submit "Save"
